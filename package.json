{
  "name": "nebubox",
  "version": "0.1.1",
  "description": "Run AI coding CLI tools safely inside Docker containers",
  "type": "module",
  "bin": {
    "nebubox": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:docker": "bash scripts/e2e/run-all.sh",
    "test:docker:ci": "docker build -f scripts/e2e/Dockerfile -t nebubox-e2e . && docker run --rm -v /var/run/docker.sock:/var/run/docker.sock nebubox-e2e",
    "test:docker:cleanup": "bash scripts/e2e/cleanup.sh",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build && npm test"
  },
  "engines": {
    "node": ">=22"
  },
  "keywords": [
    "docker",
    "cli",
    "ai",
    "claude",
    "gemini",
    "codex",
    "sandbox"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luixaviles/nebubox.git"
  },
  "homepage": "https://luixaviles.github.io/nebubox",
  "bugs": {
    "url": "https://github.com/luixaviles/nebubox/issues"
  },
  "author": "Luis Aviles (https://github.com/luixaviles)",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/node": "^22.15.0",
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.9.0",
    "vitest": "^4.0.18"
  }
}
